extends ../base.pug

block content 
    if errorMessage 
        span=errorMessage

    img(src="/"+loggedInUser.avatarUrl, width="100", height="100" )
    form(method="POST", enctype="multipart/form-data")
        label(for="avatar") Profile Image
        input(name="avatar", id="avatar", type="file", accept="image/*")
        input(name="username", type="text", required, placeholder="Username", value=loggedInUser.username)
        input(name="email", type="email", required, placeholder="E-mail", value=loggedInUser.email)
        input(name="name", type="text", required, placeholder="Name", value=loggedInUser.name)
        input(name="location", type="text", placeholder="Location", value=loggedInUser.location)
        input(type="submit" value="Edit Profile")
    hr
    if !loggedInUser.socialOnly
        a(href="changePassword") Change Password &rarr;
    