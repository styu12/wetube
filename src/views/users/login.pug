extends ../base.pug

block content 
    if errorMessage 
        span=errorMessage

    form(method="POST")
        input(name="username", type="text", required, placeholder="Username")
        input(name="password", type="password", required, placeholder="Password")
        input(type="submit" value="Login")
    a(href="/users/github").socialLogin.github
        i.fab.fa-github 
            | Login by Github account

    p.authChange-text Doesn't have an account yet? 
    a(href="/join").authChange-link Join Now &rarr;
    