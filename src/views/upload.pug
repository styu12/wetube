extends base.pug

block content 

    if errorMessage     
        span=errorMessage

    div#previewContainer 
        video#preview
        button#actionBtn Start Recording

    form(method="POST", enctype="multipart/form-data")
        label(for="video") Upload Video    
        input(name="video", id="video", type="file", accept="video/*", required)
        label(for="thumb") Upload Thumbnail    
        input(name="thumb", id="thumb", type="file", accept="image/*", required)
        input(name="title", type="text", placeholder="Title", required, maxlength=50)
        input(name="description", type="text", placeholder="Description", required, minlength=20)
        input(name="hashtags", type="text", placeholder="tag1,tag2,tag3,...", required)
        input(type="submit" value="Upload Video")

block script   
    script(src="/assets/js/recorder.js")
        