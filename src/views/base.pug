doctype html 
html(lang="ko")
    head 
        title #{pageTitle} | #{siteName}
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body 
        header 
            small Welcome
        main
            nav
                ul  
                    li 
                        a(href="/videos/upload") Upload New Video
                    li 
                        a(href="/") Home
                    li 
                        a(href="/search") Search Videos
                    if loggedIn 
                        li 
                            a(href="/logout") Log Out 
                        li 
                            a(href="/profile") #{loggedInUser.name}'s Profile 
                    else 
                        li 
                            a(href="/login") Login
                        li 
                            a(href="/join") Join
            h1=pageTitle
            block content
            include partials/footer.pug
